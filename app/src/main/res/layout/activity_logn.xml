<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#5956E9"

    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="196dp"
        android:src="@drawable/elipse20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="29dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/elipse20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:src="@drawable/elipse19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="103dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/raleway_extrabold"
        android:text="Welcome\nBack!!"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_3"
        android:layout_width="424dp"
        android:layout_height="528dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectanglecard1"
        android:elevation="30dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/raleway_extrabold"

            android:gravity="top"
            android:text="Login!"
            android:textColor="@color/black"
            android:textSize="40sp"


            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"

            android:layout_marginTop="90dp"
            android:layout_marginEnd="14dp"
            android:hint="Email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"

            android:layout_marginTop="180dp"
            android:layout_marginEnd="14dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="314dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginHorizontal="15dp"

            android:layout_marginTop="235dp"


            android:background="#5956E9"

            android:shadowDy="1000"
            android:shadowRadius="50"
            android:text="Login"


            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="310dp"
            android:fontFamily="@font/raleway_extrabold"
            android:text="New User? Create an Account"
            android:textColor="#5956E9" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:textColor="#5956E9"

            android:layout_marginTop="335dp"
            android:text="or sign in with" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="59dp"
            android:layout_height="54dp"
            android:layout_marginStart="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="375dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="59dp"
            android:layout_height="54dp"
            android:layout_marginTop="375dp"
            android:layout_marginStart="-75dp"
            android:layout_gravity="center_horizontal"

            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="59dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="375dp"
            android:src="@drawable/google" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
